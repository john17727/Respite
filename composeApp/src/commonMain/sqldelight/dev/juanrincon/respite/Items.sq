get:
SELECT
    item.id AS id,
    item.name AS name,
    category_id,
    category.name AS category_name
FROM item
JOIN category ON category.id = category_id
ORDER BY category_id ASC;

insert:
INSERT INTO item VALUES (?, ?, ?);

update:
UPDATE item SET name=?, category_id=? WHERE id=?;

delete:
DELETE FROM item WHERE id=?;
